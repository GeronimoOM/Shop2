<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-1.0" maxWidth="-1.0" minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="ukma.groupproject.shop.controller.ItemsTabController">
  <bottom>
    <BorderPane prefHeight="68.0" prefWidth="-1.0">
      <right>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
          <children>
            <Button id="create" fx:id="createOrderButton" disable="true" mnemonicParsing="false" text="Create Order with this Item">
              <HBox.margin>
                <Insets right="50.0" />
              </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Create" />
            <Button mnemonicParsing="false" text="Edit" />
            <Button mnemonicParsing="false" text="Delete" />
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" fx:id="x1" />
          </padding>
        </HBox>
      </right>
    </BorderPane>
  </bottom>
  <center>
    <TableView fx:id="itemsTable" prefWidth="860.0">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      <columns>
        <TableColumn prefWidth="400.0" resizable="false" text="Name" fx:id="nameColumn" />
        <TableColumn prefWidth="150.0" resizable="false" text="Amount" fx:id="amountColumn" />
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="149.0" resizable="false" text="Min. amount" fx:id="minAmountColumn" />
        <TableColumn prefWidth="300.0" resizable="false" text="Department" fx:id="departmentColumn" />
      </columns>
    </TableView>
  </center>
  <top>
    <BorderPane padding="$x1" prefHeight="41.0" prefWidth="1000.0">
      <left>
        <TextField prefWidth="300.0" promptText="Name" />
      </left>
      <right>
        <ChoiceBox fx:id="departmentChoiceBox" prefWidth="300.0" />
      </right>
    </BorderPane>
  </top>
</BorderPane>
